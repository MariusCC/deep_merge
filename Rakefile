begin
  require 'jeweler'
  Jeweler::Tasks.new do |s|
    s.name = "deep_merge"
    s.summary = "A fork of http://rubyforge.org/projects/deepmerge/ with 1.9 fixes and ActiveSupport compatability "
    s.email = "info@peritor.com"
    s.homepage = "http://github.com/peritor/deep_merge"
    s.description = s.summary
    s.authors = ["Mathias Meyer, Jonathan Weiss"]
    
    s.files = FileList["[A-Z]*.*", "{lib}/**/*"]
  end
rescue LoadError
  puts "Jeweler not available. Install it with: sudo gem install technicalpickles-jeweler -s http://gems.github.com"
end